delimiters "{", "}"

page(content, pageName) ::= <<
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{pageName}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
          integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
</head>
<body>
<div class="d-flex align-items-center">
    <div class="container text-center">
    {content}
    </div>
</div>
</body>
</html>
>>

text(text) ::= <<

    <div class="row justify-content-center pt-2">
        <span>{text}</span>
    </div>
>>

input(id, label, value) ::= <<

    <div class="row justify-content-center pt-2">
        <label for="{id}">{label}</label>
    </div>
    <div class="row justify-content-center">
        <input type="text" id="{id}" placeholder="{label}?" value="{value}"/>
    </div>
>>

password(id, label, value) ::= <<

    <div class="row justify-content-center pt-2">
        <label for="{id}">{label}</label>
    </div>
    <div class="row justify-content-center">
        <input type="password" id="{id}" placeholder="{label}?" value="{value}"/>
    </div>
>>

button(description, targetIndex) ::= <<

    <div class="row justify-content-center pt-2">
        <button type="button" class="btn btn-success" onclick="window.parent.changeFrameWithToast('{description} clicked', {targetIndex});">{description}</button>
    </div>
>>

buttonAlone(description, targetIndex) ::= <<

    <div class="row justify-content-center pt-2">
        <a type="button" class="btn btn-success" href="{targetIndex}_page.html">{description}</a>
    </div>
>>
